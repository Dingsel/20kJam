{
    "namespace": "gm_runecollector",

    "render": {
        "type": "panel",

        "$offset": [0, 0],
        "variables": [
            {
                "requires": "((not $desktop_screen and not $education_edition) or ($is_android or $is_ios))",
                "$offset": [0, 20]
            }
        ],
        "offset": "$offset",
        "factory": {
            "name": "hud_title_text_factory",
            "control_ids": {
                "hud_title_text": "main@gm_runecollector.main"
            }
        }
    },


    "timer@rt20k.img": {
        "$font_scale|default": 1,
        "$color|default": [1, 1, 1],
        "$which_at|default": 0,
        "$length|default": 5,
        "$inside_base|default": "TTITT",
        "$extra_addition|default": "",

        "alpha": 0.4,
        "texture": "textures/ui/hud_tip_text_background",
        "size": ["100%c + 6px", "100%c"],
        "controls": [
            {
                "setSize@rt20k.sp": {
                    "orientation": "horizontal",
                    "size": ["100%c", "100%cm"],
                    "anchor_from": "center",
                    "anchor_to": "center",
                    "controls": [
                   {
                    "text@rt20k.l": {
                    
                      "text": "#timer_insides",
                    "font_scale_factor": "$font_scale",
                      "layer": 1,
                                     "bindings": [
                                    {
                                        "binding_name": "#hud_title_text_string"
                                    },
                                    {
                                        "binding_type": "view",
                                        "source_property_name": "((('%.' + ($length + 3) + 's') * ((#hud_title_text_string - (('%.' + ($which_at) + 's') * #hud_title_text_string))))) - ',')",
                                        "target_property_name": "#timer_whole"
                                    },
                                    {
                                        "binding_type": "view",
                                        "source_property_name": "(('ยง6' + $extra_addition + #timer_whole) - 'TMR')",
                                        "target_property_name": "#timer_insides"
                                    }
                                ],
                      "shadow": true
                    } 
            
            },
            {
              "pad@rt20k.p": {
                "size": [2, "100%sm"]
              }
            },
            {
              "img@rt20k.p": {
                "size": ["100%c", "100%sm"],
                "controls": [
                  {
                    "img@rt20k.img": {
                      "texture": "rt20k/coin",
                      "size": [12, 12]
                    }
                  }
                ]
              }
            }
                    ]
                }
            }
        ]
    },

    "main@rt20k.p": {
        "anims": ["@gm_race.out_anim_main"],

        "bindings": [
            {
                "binding_name": "#hud_title_text_string"
            },
            {
                "binding_type": "view",
                "source_property_name": "('%.3s' * #hud_title_text_string)",
                "target_property_name": "#text_name"
            },
            {
                "binding_type": "view",
                "source_property_name": "(#text_name = 'RCL')",
                "target_property_name": "#visible"
            }
        ],
        "controls": [
            {
                "top@rt20k.sp": {
                    "size": ["100%c", 16],
                    "offset": [0, 2],
                    "orientation": "horizontal",
                    "anchor_from": "top_middle",
                    "anchor_to": "top_middle",
                    "controls": [
                        {
                            "timer@gm_runecollector.timer": {
                                "$which_at": 11,
                                "size": ["100%c + 6px", 16],
                                "$font_scale": 1.5,
                                "$color": [0.2, 0.9, 0.3],
                                "$length": 4,
                                "$inside_base": "9999",
                                "$extra_addition": ""
                            }
                        },
                        {
                            "pad@rt20k.p": {
                                "size": [4, 16]
                            }
                        },
                        {
                            "timer@gm_boxfights.timer": {
                                "size": ["100%c + 6px", 16],
                                "$which_at": 3,
                                "$font_scale": 1.5
                            }
                        }
                    ]
                }
            }
        ]
    }
}
