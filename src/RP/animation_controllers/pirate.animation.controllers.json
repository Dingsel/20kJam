{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.pirate": {
            "initial_state": "idle",
            "states": {
                "idle": {
                    "animations": ["idle", "hide"],
                    "blend_via_shortest_path": true,
                    "transitions": [
                        {
                            "binoculars": "false"
                        }
                    ]
                },
                "binoculars": {
                    "blend_transition": 1, 
                    "blend_via_shortest_path": true,
                    "animations": ["idle", "binoculars"],
                    "transitions": [
                        {
                            "idle": "query.all_animations_finished"
                        }
                    ]
                }
            }
        }
    }
}
